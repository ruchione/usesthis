---
layout: default
title: Interviews
---

<% @posts.each do |interview| %>
<article class="interviewee h-card vcard">
  <figure>
    <a href="/interviews/<%= interview.slug %>/" title="View the interview with <%= interview.title %>."><img src="/images/portraits/<%= interview.slug %>.jpg" width="500" height="335" class="portrait" alt="<%= interview.title %>"></a>
  </figure>
  <header>
    <h3><a href="/interviews/<%= interview.slug %>/" title="View the interview with <%= interview.title %>." class="p-name"><%= interview.title %></a></h3>
    <p class="summary p-summary"><%= interview.summary %></p>
    <time datetime="<%= interview.date.strftime('%Y-%m-%d') %>" class="dt-published"><%= interview.date.strftime('<a href="/interviews/%Y/%m/" title="View all the interviews from %B, %Y.">%B %d</a>, <a href="/interviews/%Y/" title="View all the interviews from %Y.">%Y</a>') %>.</time>
    <nav class="categories">
      <ul>
      <% interview.categories.each do |slug| %><li><% if @category == slug %><strong><%= slug %></strong><% else %><a href="/categories/<%= slug %>/" title="View all the '<%= slug %>' interviews." class="p-category"><%= slug %></a><% end %></li><% end %>
      </ul>
    </nav>
  </header>
</article>
<% end %>

<% if @pagination[:pages] > 1 %>
  <nav id="paginator">
  Page <strong><%= @pagination[:page] %></strong> of <strong><%= @pagination[:pages] %></strong> (<%= @pagination[:post_count] %> interview<% if @pagination[:post_count] > 1 %>s<% end %>):
  <% if @pagination[:previous_page] %><a href="<%= @pagination[:previous_page_url] %>" title="Go to page <%= @pagination[:previous_page] %> of the interviews." id="previous">Previous</a><% else %><span id="previous">Previous</span><% end %>
  /
  <% if @pagination[:next_page] %><a href="<%= @pagination[:next_page_url] %>" title="Go to page <%= @pagination[:next_page] %> of the interviews." id="next">Next</a><% else %><span id="next">Next</span><% end %>
  </nav>
<% end %>